package com.gildedrose;

import org.junit.jupiter.api.Test;
import org.junit.jupiter.params.ParameterizedTest;
import org.junit.jupiter.params.provider.CsvSource;

import static org.junit.jupiter.api.Assertions.assertEquals;

import org.junit.jupiter.api.Nested;

class GildedRoseTest {

    @Test
    void foo() {
        Item[] items = new Item[] { new Item("foo", 7, 5) };
        GildedRose app = new GildedRose(items);
        app.updateQuality();
        assertEquals("foo", app.items[0].name);
        assertEquals(6, app.items[0].sellIn);
        assertEquals(4, app.items[0].quality);
    }
    
    
    @ParameterizedTest(name="{0} {1} {2} {3} {4}")
	@CsvSource(value= {"'Aged Brie',3,5,2,6"}) //SI SI
    void AgedBrie(String nombre,int sellIn, int quality, int sellOut, int qualityOut) {
        Item[] items = new Item[] { new Item(nombre, sellIn, quality) };
        GildedRose app = new GildedRose(items);
        app.updateQuality();
        
        assertEquals("Aged Brie", app.items[0].name);
        assertEquals(sellOut, app.items[0].sellIn);
        assertEquals(qualityOut, app.items[0].quality);
    }
    
    @ParameterizedTest(name="{0} {1} {2} {3} {4}")
   	@CsvSource(value= {"'Aged Brie',5,0,4,5"}) //SI NO
       void AgedBrie2(String nombre,int sellIn, int quality, int sellOut, int qualityOut) {
           Item[] items = new Item[] { new Item(nombre, sellIn, quality) };
           GildedRose app = new GildedRose(items);
           app.updateQuality();
           
           assertEquals("Aged Brie", app.items[0].name);
           assertEquals(sellOut, app.items[0].sellIn);
           assertEquals(qualityOut, app.items[0].quality);
       }
    @ParameterizedTest(name="{0} {1} {2} {3} {4}")
   	@CsvSource(value= {"'Aged Brie',-1,2,-2,4"}) //NO SI
       void AgedBrie3(String nombre,int sellIn, int quality, int sellOut, int qualityOut) {
           Item[] items = new Item[] { new Item(nombre, sellIn, quality) };
           GildedRose app = new GildedRose(items);
           app.updateQuality();
           
           assertEquals("Aged Brie", app.items[0].name);
           assertEquals(sellOut, app.items[0].sellIn);
           assertEquals(qualityOut, app.items[0].quality);
       }
    @ParameterizedTest(name="{0} {1} {2} {3} {4}")
   	@CsvSource(value= {"'Aged Brie',0,0,-1,2"}) //NO NO
       void AgedBrie4(String nombre,int sellIn, int quality, int sellOut, int qualityOut) {
           Item[] items = new Item[] { new Item(nombre, sellIn, quality) };
           GildedRose app = new GildedRose(items);
           app.updateQuality();
           
           assertEquals("Aged Brie", app.items[0].name);
           assertEquals(sellOut, app.items[0].sellIn);
           assertEquals(qualityOut, app.items[0].quality);
       }
    
    @Test
    void Backstage() {
        Item[] items = new Item[] { new Item("Backstage passes to a TAFKAL80ETC concert", 0, 0) };
        GildedRose app = new GildedRose(items);
        app.updateQuality();
        assertEquals("Backstage passes to a TAFKAL80ETC concert", app.items[0].name);
    }
    
    
    @Test
    void Sulfuras() {
        Item[] items = new Item[] { new Item("Sulfuras, Hand of Ragnaros", 0, 0) };
        GildedRose app = new GildedRose(items);
        app.updateQuality();
        assertEquals("Sulfuras, Hand of Ragnaros", app.items[0].name);
    }
    
   
    	
    


    

}
